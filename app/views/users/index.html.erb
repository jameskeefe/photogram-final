<h1>List of all users</h1>

<table border="1">
      <tr>
        <th>
          Username
        </th>

        <th>
          Private
        </th>

        <th>
          Follow?
        </th>

        <th>
          Link
        </th>
      </tr>

      <% @list_of_users.each do |a_user| %>
      <tr>
        <td>
          <%= a_user.username %>
        </td>

        <td>
          <%= a_user.private %>
        </td>

        <td>
          Send a follow request!
        </td>

        <td>
          <a href="/users/<%= a_user.username %>">Show details</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
